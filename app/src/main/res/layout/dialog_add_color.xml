<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/relative_temp4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="@dimen/mediumMargin"
            android:id="@+id/clear_dialogColor"
            android:layout_centerVertical="true"
            android:src="@drawable/clear"
            android:layout_width="@dimen/bticon"
            android:layout_height="@dimen/bticon" />

        <TextView
            android:layout_toRightOf="@+id/clear_dialogColor"
            android:layout_centerVertical="true"
            android:padding="@dimen/mediumMargin"
            android:textColor="@color/textBlack"
            android:text="@string/addcolor"
            android:id="@+id/tv_temp1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:id="@+id/divider1"
        android:layout_below="@id/relative_temp4"
        android:background="@color/textBlack"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"/>

    <android.support.v7.widget.RecyclerView
        android:paddingRight="@dimen/marginLarge"
        android:id="@+id/recyclerViewAddColor"
        android:layout_below="@id/divider1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>